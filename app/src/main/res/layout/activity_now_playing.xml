<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">


            <ImageView
                android:id="@+id/image"
                android:contentDescription="album image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/blink182_art"/>


            <TextView
                android:id="@+id/artists_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="artist"
                android:contentDescription="artist name"/>

            <TextView
                android:id="@+id/song_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                tools:text="song"
                android:contentDescription="song name"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/backward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/back"
            android:contentDescription="back button"/>

        <ImageView
            android:id="@+id/play_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/now_playing_icon"
            android:contentDescription="play button"/>

        <ImageView
            android:id="@+id/forward"
            android:layout_width="0dp"
            android:layout_height="101dp"
            android:layout_weight="2"
            android:src="@drawable/fastforward"
            android:contentDescription="fastforward button"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>



    <TextView
        android:id="@+id/main_menu_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        tools:text="Main Menu"
        android:contentDescription="Main Menu"/>


</LinearLayout>


    </ScrollView>