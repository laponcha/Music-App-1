<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalstructureapp"
    android:minSdkVersion="17" android:targetSdkVersion="27" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_happy_launcher"
        android:label="Musical Structure App"
        android:roundIcon="@mipmap/ic_happy_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlternativeRockActivity"
            android:label="Artists" />
        <activity
            android:name=".HipHopActivity"
            android:label="Songs" />
        <activity
            android:name=".NowPlayingActivity"
            android:label="Now Playing"/>
    </application>

</manifest>